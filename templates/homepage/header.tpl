    <div class="desktop_toggle_menu_block_wrapper">
        <div class="container">
            <div class="desktop_toggle_menu_block">
                <ul class="desktop_toggle_menu">
                    <li class="desktop_toggle_menu__item white"><a href="#">Suppliers</a></li>
